{
    "compilerOptions": {
        "target": "es2020",
        "module": "commonjs",
        "declaration": true,
        "noEmitOnError": true,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "skipLibCheck": true,
        "rootDir": "src",
        "experimentalDecorators": true,
        "baseUrl": ".",
        "paths": {
            "@/*": ["src/*"],
            "@": ["src"]
        },
        "outDir": "lib",
        "sourceMap": true
    },
    "include": ["src"],
    "exclude": ["src/test.ts"]
}
